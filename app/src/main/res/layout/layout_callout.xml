        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:id="@+id/info_window_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Tonkutsu Ramen" />

            <TextView
                android:id="@+id/info_window_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/info_window_title"
                android:layout_alignRight="@id/info_window_title"
                android:layout_below="@id/info_window_title"
                android:layout_marginTop="2dp"
                android:text="Nuit : 60-100â‚¬"
                android:textSize="12sp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/info_window_ipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/info_window_description"
                android:layout_alignRight="@id/info_window_description"
                android:layout_below="@id/info_window_description"
                android:layout_marginTop="2dp"
                android:text="IPE : 6.25/10"
                android:textSize="12sp"
                android:textStyle="italic" />
